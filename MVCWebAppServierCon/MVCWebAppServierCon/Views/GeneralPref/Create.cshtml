@model MVCWebAppServierCon.Models.GeneralPreferenceClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GeneralPreferenceClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QouteAmount" class="control-label"></label>
                <input asp-for="QouteAmount" class="form-control" />
                <span asp-validation-for="QouteAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeductionAmount" class="control-label"></label>
                <input asp-for="DeductionAmount" class="form-control" />
                <span asp-validation-for="DeductionAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConnecWith">finpack</label><br>

                <input id="finpack" type="radio" asp-for="ConnecWith" value="finpack">
                <label for="finpack">finpack</label><br>

                <input id="audit" type="radio" asp-for="ConnecWith" value="audit">
                <label for="audit">audit</label><br>

                <span asp-validation-for="ConnecWith" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivitiyTable" class="control-label"></label>
                <input asp-for="ActivitiyTable" class="form-control" />
                <span asp-validation-for="ActivitiyTable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTable" class="control-label"></label>
                <input asp-for="ProjectTable" class="form-control" />
                <span asp-validation-for="ProjectTable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="link_view_name" class="control-label"></label>
                <input asp-for="link_view_name" class="form-control" placeholder="type link view name here ..." />
                <span asp-validation-for="link_view_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Company_Name" class="control-label"></label>
                <input asp-for="Company_Name" class="form-control" placeholder="type Company Name here ..." />
                <span asp-validation-for="Company_Name" class="text-danger"></span>
            </div>
            <div class="form-group input_group_style " style="margin-bottom:15px; padding-left:0;">

                <label class="control-label"> Company Logo</label>
                <div class="custom-file">
                    <input asp-for="Logo_Files" id="logo_input" type="file" class="form-control custom-file-input" />
                    <label id="logo_input_label" class="custom-file-label" style="overflow: hidden;">Choose File ...</label>
                    <span id="logo_error_element" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section scripts{
    <script>
        var logo_input = document.getElementById("logo_input");

        logo_input.addEventListener('change', () => {
            //set the label
            document.getElementById("logo_input_label").innerHTML = logo_input.files[0].name;
            console.log()
        })
    </script>
}