@model MVCWebAppServierCon.Models.OrderTypeClass

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("Create", "Order", FormMethod.Post))
{
    <div class="rowPage">
        <h1>@Localizer["Create"]</h1>
    </div>

    <h4 class="rowPage" style="@Localizer["text-align: left  ;direction: ltr"]">@Localizer["Order Type Class"]</h4>
    <hr />
    <div class="rowPage">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="orderTypeName" class="control-label" style="@Localizer["text-align: left  ;direction: ltr"]">@Localizer["Order Type Name"]</label>
                        <input asp-for="orderTypeName" class="form-control" />
                        <span asp-validation-for="orderTypeName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="orderTypeNumDays" class="control-label" style="@Localizer["text-align: left  ;direction: ltr"]">@Localizer["# of Days"]</label>
                        <input asp-for="orderTypeNumDays" class="form-control" />
                        <span asp-validation-for="orderTypeNumDays" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="orderTypeNumDaysAfter" class="control-label" style="@Localizer["text-align: left  ;direction: ltr"]">@Localizer["# of Days After"]</label>
                        <input asp-for="orderTypeNumDaysAfter" class="form-control" />
                        <span asp-validation-for="orderTypeNumDaysAfter" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="orderTypeNote" class="control-label" style="@Localizer["text-align: left  ;direction: ltr"]">@Localizer["Order Type Note"]</label>
                        <input asp-for="orderTypeNote" class="form-control" />
                        <span asp-validation-for="orderTypeNote" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    @Html.CheckBoxFor(c => c.orderTypeShowFunder)
                    <div class="form-check col-md-3">
                        <label class="form-check-label" for="orderTypeShowFunder">
                            Show Funder
                        </label>
                    </div>
                    @Html.CheckBoxFor(c => c.orderTypeShowBudgetLine)
                    <div class="form-check col-md-3">
                        <label class="form-check-label" for="orderTypeShowBudgetLine">
                            Show Budget Line
                        </label>
                    </div>

                    @Html.CheckBoxFor(c => c.orderTypeShowTransDate)
                    <div class="form-check col-md-3">
                        <label class="form-check-label" for="orderTypeShowTransDate">
                            Show Transaction Date
                        </label>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                @ViewBag.message
            </form>
        </div>
    </div>

    <div class="rowPage">
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="rowPage">


        <table class="table table-striped responsive-table text-center table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.orderTypeCode)*@

                        @Localizer["Order Type Code"]
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.orderTypeName)*@
                        @Localizer["Order Type Name"]
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.orderTypeUserId)*@
                        @Localizer["Order Type UserId"]
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.orderTypeCreationDate)*@
                        @Localizer["Order Type Creation Date"]
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.orderTypeNote)*@
                        @Localizer["Order Type Note"]
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (OrderTypeClass item in ViewBag.Order)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderTypeCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderTypeUserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderTypeCreationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderTypeNote)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.orderTypeCode }) |
                            @Html.ActionLink("Details", "Details", new { id = item.orderTypeCode }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.orderTypeCode })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

}