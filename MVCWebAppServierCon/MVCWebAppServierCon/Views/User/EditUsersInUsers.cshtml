@model MVCWebAppServierCon.ViewModels.UserViewModel


@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Permissions";
}

<h1>@Localizer["Permissions"]</h1>
<div class="rowPage">
    <h4>@Localizer["Permission Class"]</h4>
</div>
<hr />

<div class="rowPage">

    <div class="col-md-12">
        <form asp-action="EditUsersInUsers">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="userName" class="control-label">@Localizer["User Name"]</label>
                    <input asp-for="userName" class="form-control" disabled="disabled" />
                    <span asp-validation-for="userName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="userEmail" class="control-label">@Localizer["User Email"]</label>
                    <input asp-for="userEmail" class="form-control" />
                    <span asp-validation-for="userEmail" class="text-danger"></span>
                </div>


            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <a asp-controller="User" asp-action="EditUsersInUsers" type="submit" class="btn btn-primary">Change</a>
                </div>
            </div>

         

            <p>
                <a asp-action="Create">User Screen</a>
            </p>
            @ViewBag.message
        </form>
    </div>
   </div>



