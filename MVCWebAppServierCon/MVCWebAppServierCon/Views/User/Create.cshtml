@model MVCWebAppServierCon.ViewModels.UserViewModel


<link href="~/css/site.css" rel="stylesheet" />
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h1>@Localizer["Create"]</h1>
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h4 style="margin-bottom:0;">@Localizer["User Class"]</h4>

        <div class="form-group" style="margin-bottom:0;">
            <input type="submit" value="Create" class="btn btn-primary" style="background-color: #19a3f4;width: 150px;" />
        </div>
    </div>
    <hr />

    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
    <div>

