                @ViewBag.message
            </form>
        </div>
    </div>

    <div style="display:flex; justify-content:space-between;padding: 14px 0;">
        <div style="display: flex; justify-content: center;  align-items: center;">
            <div class="my_pagination" style="margin-top: 0;">
                @if (ViewBag.pageNumber <= 1)
                {
                    <a class="pagination_item disabled_pagination_item">Previous</a>
                }
                else
                {
                    <a asp-action="Create" asp-route-pageNumber="@(ViewBag.pageNumber-1)" class="pag_item pagination_item">Previous</a>
                }
                @for (int i = 1; i <= ViewBag.no_of_pages; i++)
                {
                    <a asp-action="Create" asp-route-pageNumber="@i" class="pag_item pagination_item @(ViewBag.pageNumber == i ? "active_pagination_item" : "" )" style="width: 32px;">@i</a>
                }
                @if (ViewBag.pageNumber >= ViewBag.no_of_pages)
                {
                    <a class="pagination_item disabled_pagination_item">Next</a>
                }
                else
                {
                    <a asp-action="Create" asp-route-pageNumber="@(ViewBag.pageNumber+1)" class="pag_item pagination_item">Next</a>
                }
            </div>
        </div>
        <div class="form-group" style="display: flex; align-items: center;margin-bottom: 0;">
            <input id="search_input_01" type="text" class="search form-control" placeholder="What you looking for?">
            <div style="
                padding: 12px;
                color: #fff;
                background-color: #19a3f4;
                border-radius: 0 3px 3px 0;
                cursor:pointer;
            "
                 id="search_btn_01"><i class="fas fa-search"></i></div>
        </div>
    </div>



    <div style="position: relative;    width: 100% !important; overflow: auto;">

        <table class="table table-hover table-bordered results" style="width: max-content;width: 100% !important;">
            <thead style="background-color: #00a6ff; color: #fff;">
                <tr>
                    <th>
                        @Localizer["User Name"]
                    </th>
                    <th>
                        @Localizer["User Email"]
                    </th>
                    <th>
                        @Localizer["User Type"]
                    </th>
                    <th>
                        @Localizer["User Department Code"]
                    </th>
                    <th>
                        @Localizer["User Active"]
                    </th>
                    <th>
                        @Localizer["User Note"]
                    </th> 
                    <th>
                        @Localizer["Executable"]
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="users_table_tag">
                @foreach (UserClass item in ViewBag.Users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.userName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.userEmail)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.userPassword)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.userConfirmPassword)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.userTypeCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.userDepartmentCode)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.managmentAccesstanceCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sectionManagerCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.finacnceDepartmentCode)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.userActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.userNote)
                        </td>
                        <td>
                            <input type="checkbox" checked="@(item.Excutable == true ? true : false)" disabled />
                        </td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@item.userCode">Edit</a>
                            <a>  \  </a>
                            <a asp-controller="User" asp-action="EditUsersView" asp-route-id="@item.userCode">Permissions</a>

                            @*<a asp-action="Details" asp-route-id="@item.userCode">Details</a> |*@
                            @*<a asp-action="Delete" asp-route-id="@item.userCode">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<script>

    const refill_my_orders = (users) => {
        var users_table_dom = document.getElementById("users_table_tag");
        users_table_dom.innerHTML = "";
        users.map(current_order => {
            users_table_dom.innerHTML +=
                (` <tr>
                        <td>
                            ${current_order.userName}
                        </td>
                        <td>
                            ${current_order.userEmail}
                        </td>
                        <td>
                            ${current_order.userTypeCode}
                        </td>
                        <td>
                            ${current_order.userDepartmentCode}
                        </td>
                        <td>
                            ${current_order.userActive}
                        </td>
                        <td>
                            ${current_order.userNote}
                        </td>
                        <td>
                            <input type="checkbox" checked=" ${current_order.excutable}" disabled />
                        </td>
                        <td>
                            <a href="User/Edit/${current_order.userCode}">Edit</a>
                            <a>  \  </a>
                            <a href="User/EditUsersView/${current_order.userCode}">Permissions</a>
                        </td>
                    </tr>`);
        })
    }

    function display_cs_date(cs_date) {
        var js_date = new Date(cs_date);
        var date = js_date.getMonth() + 1 < 10 ? "0" + (js_date.getMonth() + 1) : js_date.getMonth() + 1
        return (js_date.getDate() + "/" + date + "/" + js_date.getFullYear());
    }

    document.getElementById("search_btn_01").addEventListener('click', () => {
        $.ajax({
            url: "/User/Search_Users",
            data: { query: document.getElementById("search_input_01").value },
            success: function (data) {
                console.log(data.result);
                refill_my_orders(data.result);
            }
        });
        console.log(document.getElementById("search_input_01").value)
    })

</script>