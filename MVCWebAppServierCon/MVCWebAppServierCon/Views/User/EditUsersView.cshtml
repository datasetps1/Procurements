@model VUserRoles


@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Permissions";
}

<h1>@Localizer["Permissions"]</h1>
<div class="rowPage">
    <h4>@Localizer["Permission Class"]</h4>
</div>
<hr />
<form>
    <div class="rowPage">
        <div class="form-group col-sm-4">
            <table class="table">
                <thead>
                    <tr>
                        <th style="font-weight: bold; font-size: large; background-color:orange">
                            @*@Html.DisplayNameFor(model => model.userName)*@
                            @Localizer["User Name"]
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="font-size:x-large; font-weight:bold">
                            @ViewBag.UserName
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group col-sm-4">
            <table class="table">
                <thead>
                    <tr>
                        <th style="font-weight: bold; font-size: large; background-color:orange">
                            @*@Html.DisplayNameFor(model => model.userName)*@
                            @Localizer["Roles"]
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (VUserRoles item in ViewBag.Name)
                    {
                        <tr>
                            <td style="font-size:medium">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="rowPage">
        <div class="form-group col-sm-4">
            <a asp-action="Create">Back to User Screen</a>
        </div>
        <div class="form-group col-sm-4">
            <a class="nav-link" asp-controller="Administration" asp-action="ListRoles">@Localizer["Edit Permissions"]</a>
        </div>
     </div>
</form>
