@model MVCWebAppServierCon.Models.Criteria

@{
    ViewData["Title"] = "Delete";
}

<h3 style="text-align:center;">Delete Criteria</h3>

<h7 style="text-align:center;">Are you sure you want to delete this?</h7>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        @if (Model.Criteria_Rank == 0)
        {
            <dd class="col-sm-9">
                less
            </dd>
        }
        else
        {
            <dd class="col-sm-9">
                more
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
